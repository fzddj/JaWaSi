<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable type="com.makedream.jawasi.ui.fragment.MainFragment.ExerciseVo" name="vo"/>
    </data>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.makedream.jawasi.ui.fragment.MainFragment">


    <android.support.v7.widget.CardView
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{vo.day+""}'
                android:textSize="50sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/tv_day_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="打卡天数"
                android:textColor="#c4bebe"
                android:layout_below="@id/tv_day"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"/>


            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text='@{vo.nums+""}'
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_marginRight="100dp"
                android:textSize="30sp"
                android:layout_marginTop="80dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="累计个数"
                android:textColor="#c4bebe"
                android:layout_below="@id/tv_num"
                android:layout_alignParentRight="true"
                android:layout_marginRight="106dp"
                android:layout_alignBaseline="@id/tv_day_tip"
                android:layout_marginTop="10dp"
                android:textSize="14sp"/>


        </RelativeLayout>


    </android.support.v7.widget.CardView>



    <android.support.v7.widget.CardView
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_day_execise_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:textSize="50sp"
                android:textStyle="italic"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="30dp"/>

            <TextView
                android:id="@+id/tv_day_execise_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="训练个数"
                android:textColor="#c4bebe"
                android:layout_below="@id/tv_day_execise_num"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="10dp"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/btn_play"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:background="@drawable/roundedbutton"
                android:text="打卡"
                android:textColor="#FFFFFF"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>



</LinearLayout>
</layout>